@model IEnumerable<ElectronicShop.Customer>

<h2>Управління покупцями</h2>

<p>
    @Html.ActionLink("Додати нового", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerDiscount.DiscountValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerDiscount.DiscountValue)
        </td>
        <td>
            @Html.ActionLink("Змінити", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Деталі", "Details", new { id=item.CustomerId }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.CustomerId })
        </td>
    </tr>
}

</table>
